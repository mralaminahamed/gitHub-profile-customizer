{
  "name": "github-profile-customizer",
  "description": "Customize your GitHub profile interface",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "yarn@4.1.0",
  "scripts": {
    "ext:prepare": "esno scripts/prepare.ts",
    "dev": "yarn type-check && cross-env NODE_ENV=development run-p ext:prepare dev:build dev:ext",
    "dev:build": "run-p dev:main dev:background dev:content",
    "dev:main": "vite build --watch",
    "dev:background": "cross-env VITE_CONFIG=background vite build --watch",
    "dev:content": "cross-env VITE_CONFIG=content vite build --watch",
    "dev:ext": "web-ext run --source-dir ./dist/ --target chromium",
    "build": "cross-env NODE_ENV=production run-s clean build:all build:zip",
    "build:all": "run-p ext:prepare build:main build:background build:content",
    "build:main": "vite build",
    "build:background": "cross-env VITE_CONFIG=background vite build",
    "build:content": "cross-env VITE_CONFIG=content vite build",
    "build:zip": "web-ext build --overwrite-dest --artifacts-dir ./artifacts/ --source-dir ./dist/",
    "start": "web-ext run --source-dir ./dist/ --target chromium",
    "start:firefox": "web-ext run --source-dir ./dist/ --target firefox-desktop",
    "lint": "run-p lint:ext lint:ts lint:style",
    "lint:ext": "web-ext lint",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "lint:style": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist web-ext-artifacts .profiles",
    "sign": "web-ext sign --api-key=$WEB_EXT_API_KEY --api-secret=$WEB_EXT_API_SECRET",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.64.1",
    "@types/webextension-polyfill": "^0.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/chrome": "^0.0.297",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "esno": "^4.8.0",
    "framer-motion": "^11.18.1",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.4.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "web-ext": "^8.3.0",
    "web-ext-submit": "^7.8.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
